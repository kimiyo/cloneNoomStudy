doctype html 
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Board
        link(rel="stylesheet", href="public/css/layout/border.css")
    body
        header
            h1 Board
        main
            div#welcome
                form.welcome-form
                    input.roomname(placeholder="room name", required, type="text")
                    input.name(placeholder="name", required, type="text")
                    button.button-1 Enter room
            div#call.call
                div
                    video#myFace(autoplay,playsinline,width="80", height="60")
                    video#peerFace(autoplay,playsinline,width="80", height="60")
                    h2 whoami
                div#myStream
                div.control
                    button#mute Mute
                    button#camera Tuen Camera Off
                    select#cameras
            canvas#board(width="800",height="400")
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/board.js")
    
